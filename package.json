{
  "name": "react-simple-boilerplate",
  "version": "1.0.0",
  "description": "Simple customized react boilerplate",
  "scripts": {
    "clear": "rimraf ./build",
    "build": "yarn run clear && webpack --config webpack-config/webpack.config.js --mode production",
    "start": "webpack-dev-server --config webpack-config/webpack.config.js --open --mode development",
    "test": "jest",
    "lint": "eslint ."
  },
  "keywords": ["React", "Jest", "Boilerplate"],
  "author": "Zhe Wang <wangzhe.dut@gmail.com> (http://github.com/nicemayi)",
  "license": "MIT",
  "dependencies": {
    "react": "^16.5.0",
    "react-dom": "^16.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "css-loader": "^1.0.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "eslint": "^5.5.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-react": "^7.11.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "node-sass": "^4.9.3",
    "react-test-renderer": "^16.5.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.18.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/jest-config.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ]
  }
}
